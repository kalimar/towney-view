    <!-- Header -->
    <header id="top" class="header">
        <div class="text-vertical-center">
            <h1>Village at Towney View</h1>
            <h3>Our neighborhood resource</h3>
            <br>
            <a href="#about" class="btn btn-dark btn-lg">Find Out More</a>
        </div>
    </header>

    <!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>The Village at Towney View should make life easier.</h2>
                    <p class="lead">Neighborhood phone book, recommended services/contractors, and a travel alert tool.</p>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

    <!-- Services -->
    <!-- The circle icons use Font Awesome's stacked icon classes. For more information, visit http://fontawesome.io/examples/ -->
    <section id="services" class="services bg-primary">
        <div class="container">
            <div class="row text-center">
                <div class="col-lg-10 col-lg-offset-1">
                    <h2>Your Tools</h2>
                    <hr class="small">
                    <div class="row">
                        <div class="col-md-3 col-sm-6">
                          <div class="service-item">
                              <span class="fa-stack fa-4x">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-group fa-stack-1x text-primary"></i>
                              </span>
                              <h4>
                                  <strong>Neighbors</strong>
                              </h4>
                              <p>See who your neighbors are and how you can reach them.</p>
                              <%= link_to 'Neighbors', homes_path, class: "btn btn-light" %>
                          </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-thumbs-o-up fa-stack-1x text-primary"></i>
                            </span>
                                <h4>
                                    <strong>Recommendations</strong>
                                </h4>
                                <p>Recommend or find contractors and services.</p>
                                <%= link_to 'Recommendations', recommendations_path, class: "btn btn-light" %>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-paper-plane fa-stack-1x text-primary"></i>
                            </span>
                                <h4>
                                    <strong>Travel Alert</strong>
                                </h4>
                                <p>Let your neighbors know you'll be out of town, and for how long.</p>
                                <a href="#" class="btn btn-light">Coming Soon</a>
                            </div>
                        </div>
                        <div class="col-md-3 col-sm-6">
                            <div class="service-item">
                                <span class="fa-stack fa-4x">
                                <i class="fa fa-circle fa-stack-2x"></i>
                                <i class="fa fa-home fa-stack-1x text-primary"></i>
                            </span>
                                <h4>
                                    <strong>Your Home</strong>
                                </h4>
                                <p>Update your home information</p>
                              </br>
                                <%= link_to 'Your Home', home_path(current_home),  class: "btn btn-light" %>
                            </div>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.col-lg-10 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>

