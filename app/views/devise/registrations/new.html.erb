
<div class="col-md-6 col-md-offset-3">
  <h1>Sign up</h1>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "col-md-6 col-md-offset-3"}) do |f| %>
  <%= devise_error_messages! %>
  <h3>Primary Contact</h3>
  <div class="form-group">
    <%= f.label :street_address %>
    <%= f.text_field :street_address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :primary_first_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :primary_last_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :primary_phone %>
    <%= f.text_field :primary_phone, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div>

    <%= button_tag "Sign up", class: "btn btn-primary" %>
<% end %>

<%= render "devise/shared/links" %>
